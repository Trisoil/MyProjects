<UserControl x:Class="PPTVForWP8.Controls.SlidesShowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="202.5" d:DesignWidth="450">

    <Grid x:Name="LayoutRoot" Width="450" Height="202.5" Background="{StaticResource PPTVMasterColor}">
        <Image Style="{StaticResource PicWallStyle}"/>
        <Grid x:Name="slidesShowGrid" Width="450" Height="202.5" VerticalAlignment="Top">
            <Grid.Clip>
                <RectangleGeometry Rect="0 0 450 202.5"/>
            </Grid.Clip>
        </Grid>
        <Grid Style="{StaticResource ChannelTitleGridStyle}"/>
        <TextBlock x:Name="channelTitleBlock" FontSize="15" Margin="7.5 0 0 6" Foreground="White" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
        <StackPanel x:Name="channelPreviewStack" Margin="0 0 7.5 10" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
    </Grid>
</UserControl>