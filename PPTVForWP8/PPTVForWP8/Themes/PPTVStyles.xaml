    <Style TargetType="phone:LongListSelector" x:Key="ListJumpListStyle">
        <Setter Property="LayoutMode" Value="List"/>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="{StaticResource PPTVBorderColor}" Background="{StaticResource PPTVMasterColor}" Margin="12">
                        <TextBlock Text="{Binding GroupName}" 
                            FontFamily="{StaticResource PhoneFontFamilySemiBold}"
