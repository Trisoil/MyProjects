    <localconverter:ChannelMarkConvert x:Key="markConvert"/>
    <localconverter:ChannelDurationConverter x:Key="durationConverter"/>
    <localconverter:BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>
    <localconverter:UserStateConvert x:Key="userStateConvert"/>
    <localconverter:ToggleSwitchContentConvert x:Key="switchConverter"/>
    <localconverter:DownloadProgressConverter x:Key="downloadProgressConverter"/>
    <localconverter:DownloadStateConverter x:Key="downloadStateConverter" />
    <localconverter:IntToVisibilityConverter x:Key="intToVisibilityConverter"/>
    <localconverter:CloudDeviceConverter x:Key="cloudDeviceConvert"/>
    <localconverter:ChannelWatchPositionConvert x:Key="positionConvert"/>
    <localconverter:SecondsDurationConverter x:Key="secondsConverter"/>
    
    <local:LocalizedStrings xmlns:local="clr-namespace:PPTVForWP8" x:Key="LocalizedStrings"/>
    
