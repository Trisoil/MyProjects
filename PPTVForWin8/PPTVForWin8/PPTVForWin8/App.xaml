<Application
    x:Class="PPTVForWin8.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PPTVForWin8">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Themes/PPTVThemes.xaml"/>
                <ResourceDictionary Source="Themes/PPTVStyles.xaml"/>
                <ResourceDictionary Source="Themes/PPTVTemplates.xaml"/>
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <x:String x:Key="AppName">PPTV</x:String>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
