<UserControl x:Class="PPTVForWP7.Controls.ShareSettingItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="White"
    d:DesignHeight="90" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="xShareImage" Width="70" Height="70" Margin="0,10,10,10"/>
            <TextBlock x:Name="xShareName" FontSize="30" Width="150" Foreground="White" Text="新浪微博" Margin="20,15,15,15" VerticalAlignment="Center"/>
            <Button x:Name="xShareBindTxt" Content="绑定" BorderThickness="0" FontSize="18"  Width="125" Height="55" Foreground="White" Background="#FF00AEFF" Margin="50,0,0,0" Click="Social_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
