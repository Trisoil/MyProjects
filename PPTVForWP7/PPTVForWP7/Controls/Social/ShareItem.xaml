<UserControl x:Class="PPTVForWP7.Controls.ShareItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="White"
    d:DesignHeight="60" d:DesignWidth="480" Width="146" Height="146">

    <Grid x:Name="LayoutRoot" Background="#FF008CD6" Tap="LayoutRoot_Tap">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="xShareImage" Width="100" Height="80" Margin="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="xShareName" Foreground="White"  FontSize="{StaticResource SecondTitleSize}" Text="新浪微博" Margin="0" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="xBinded" Foreground="White" FontSize="20" Text="未绑定" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Right" d:LayoutOverrides="HorizontalAlignment" />
    </Grid>
</UserControl>
