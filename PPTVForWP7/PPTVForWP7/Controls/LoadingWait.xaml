<UserControl x:Class="PPTVForWP7.Controls.LoadingWait"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="50" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Rectangle Height="50" Width="480"  Opacity="0.0"/>
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="WaitText" Foreground="White"  Text="{ StaticResource   LoadingText}" FontSize="20" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Style="{StaticResource PerformanceProgressBar}"/>
        </StackPanel>
    </Grid>
</UserControl>
