<UserControl x:Class="PPTVForWP7.Controls.PopDialogControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="White"
    d:DesignHeight="120" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Canvas.ZIndex="100" VerticalAlignment="Top" Height="120" Background="Black" Opacity="0.8">
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="xTitleText" FontSize="20" Text="提示" Margin="20"/>
            <TextBlock x:Name="xContentText" FontSize="30" Text="成功" Margin="20,0"/>
        </StackPanel>
    </Grid>
</UserControl>
