<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    x:Class="PPTVForWP7.Controls.OrderBar" 
	d:DesignWidth="480" Width="480" Height="65">

    <Border BorderBrush="#FF4A4A4A" BorderThickness="1" Margin="0" Background="#FF05192B" CornerRadius="2">

		<Grid x:Name="LayoutRoot"  Margin="0"  >
			<Button x:Name="btnHot" Content=" 按热门 " HorizontalAlignment="Left" Margin="30,0,0,0" VerticalAlignment="Center" Click="btnHot_Click" BorderBrush="{x:Null}" Background="{x:Null}" Padding="0" Foreground="#FFFFFFFF"/>
			<Button x:Name="btnMark" Content=" 按评分 " HorizontalAlignment="Right" Margin="0,0,30,0" VerticalAlignment="Center" Click="btnMark_Click" BorderBrush="{x:Null}" Padding="0" Background="{x:Null}"  Foreground="White"/>
			<Button x:Name="btnLastest" Content=" 按最新 " Margin="0" VerticalAlignment="Center" Click="btnLastest_Click" Background="{x:Null}" BorderBrush="{x:Null}" Padding="0" HorizontalAlignment="Center"  Foreground="#FFFFFFFF"/>
		</Grid>
	</Border>
</UserControl>